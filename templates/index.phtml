<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <title>FlowCode</title>
    <link href='//fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <style>
    </style>
</head>
<body>
<span class="step1">start</span>
</body>
<script>
    $('.step1').click(function () {
        var nextStep = new Promise(function (resolve, reject)
        {
            $('.step1').addClass('step2');
            resolve();
        });
        nextStep.then(function () {
            $('.step1').removeClass('step1')
        });
    });
</script>
</html>
